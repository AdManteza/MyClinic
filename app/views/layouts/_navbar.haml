  .navbar-collapse.collapse.w-100.order-1.order-md-0.dual-collapse2
    %ul.navbar-nav.mr-auto
      - if admin_user?
        %li.nav-item.active
          = link_to 'Admin Dashboard', admin_dashboard_path, class: 'nav-link active'
        %li.nav-item
          = link_to 'Users', admin_users_path, class: 'nav-link'
        %li.nav-item
          = link_to 'Appointments', admin_appointments_path, class: 'nav-link'
      - elsif @current_user.present?
        %li.nav-item.active
          = link_to 'My Profile', client_user_path, class: 'nav-link'
      - else
        %li.nav-item.active
          = link_to 'Sign Up', user_signup_path, class: 'nav-link'
  .mx-auto.order-0
    = link_to  "#{@current_site ? @current_site.name : nil}", root_path, class: 'brand-text navbar-brand mx-auto'
