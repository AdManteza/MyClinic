/ Navigation
%nav.navbar.navbar-expand-md.navbar-dark.bg-dark
  = link_to  "#{@current_site ? @current_site.name : nil}", root_path, class: 'brand-text navbar-brand'

  %button.navbar-toggler{"data-target" => "#navbar7", "data-toggle" => "collapse", :type => "button"}
    %span.navbar-toggler-icon

  #navbar7.navbar-collapse.collapse.justify-content-stretch
    - if admin_user?
      %AdminNavbar(current-page="#{request.path}")

    - elsif @current_user.present?
      %ul.navbar-nav.ml-auto
        %li.nav-item
          = link_to 'My Profile', client_user_path, class: 'active nav-link'

    - else
      %ul.navbar-nav.ml-auto
        %li.nav-item.active
          = link_to 'Sign Up', user_signup_path, class: 'nav-link'

    %ul.navbar-nav.ml-auto
      %LoginForm(current-user="#{admin_user? ? @current_user.username : nil}")